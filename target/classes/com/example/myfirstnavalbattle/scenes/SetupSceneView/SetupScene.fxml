<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Rectangle?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            stylesheets="@SetupSceneStyle.css"
            styleClass="anchorpane"
            prefHeight="400.0" prefWidth="600.0"
            fx:controller="com.example.myfirstnavalbattle.controller.SetupController">

    <GridPane styleClass="gridpane"
              fx:id="gridpane"
              gridLinesVisible="true"
              layoutX="200" layoutY="120">
    </GridPane>

    <Rectangle width="510" height="270"
               layoutX="790" layoutY="170" fx:id="rectangle"
               styleClass="rectangles">
    </Rectangle>

    <HBox layoutY="200" layoutX="800"
          fx:id="hBox">
    </HBox>


    <Button layoutY="20" layoutX="20"
            styleClass="back-button"
            onAction="#handleBackButton">
    </Button>

    <Button layoutX="900" layoutY="500"
            styleClass="ready-button"
            text="LISTO" onAction="#handleReadyButton"
            fx:id="readyButton">
    </Button>

    <ImageView layoutX="850" layoutY="120"
               fx:id="characterImage">
    </ImageView>

    <TextField fx:id="userNameTextField"
               promptText="Digite el nombre de usuario"
               layoutX="868" layoutY="450"
               alignment="CENTER"
               minWidth="300" minHeight="30" styleClass="textField">
    </TextField>

</AnchorPane>
